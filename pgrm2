------------------------------------------------------java file-----------------------------
package com.example.program2;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity {

    EditText input;
    float value1, value2;
    boolean add, sub, mul, div;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        input = findViewById(R.id.input);

        // number buttons
        Button b1 = findViewById(R.id.b1);
        Button b2 = findViewById(R.id.b2);
        Button b3 = findViewById(R.id.b3);
        Button b4 = findViewById(R.id.b4);
        Button b5 = findViewById(R.id.b5);
        Button b6 = findViewById(R.id.b6);

        // operation buttons
        Button plus = findViewById(R.id.plus);
        Button minus = findViewById(R.id.subs);
        Button multiply = findViewById(R.id.multiply);
        Button divide = findViewById(R.id.division);
        Button equal = findViewById(R.id.equal);
        Button clear = findViewById(R.id.clear);

        // number clicks
        b1.setOnClickListener(v -> input.append("1"));
        b2.setOnClickListener(v -> input.append("2"));
        b3.setOnClickListener(v -> input.append("3"));
        b4.setOnClickListener(v -> input.append("4"));
        b5.setOnClickListener(v -> input.append("5"));
        b6.setOnClickListener(v -> input.append("6"));

        // + button
        plus.setOnClickListener(v -> {
            value1 = Float.parseFloat(input.getText().toString());
            add = true;
            input.setText("");
        });

        // - button
        minus.setOnClickListener(v -> {
            value1 = Float.parseFloat(input.getText().toString());
            sub = true;
            input.setText("");
        });

        // * button
        multiply.setOnClickListener(v -> {
            value1 = Float.parseFloat(input.getText().toString());
            mul = true;
            input.setText("");
        });

        // / button
        divide.setOnClickListener(v -> {
            value1 = Float.parseFloat(input.getText().toString());
            div = true;
            input.setText("");
        });

        // = button
        equal.setOnClickListener(v -> {
            value2 = Float.parseFloat(input.getText().toString());

            if (add) {
                input.setText(value1 + value2 + "");
                add = false;
            }

            if (sub) {
                input.setText(value1 - value2 + "");
                sub = false;
            }

            if (mul) {
                input.setText(value1 * value2 + "");
                mul = false;
            }

            if (div) {
                if (value2 != 0)
                    input.setText(value1 / value2 + "");
                else
                    input.setText("Error");
                div = false;
            }
        });

        // clear button
        clear.setOnClickListener(v -> {
            input.setText("");
            value1 = value2 = 0;
            add = sub = mul = div = false;
        });
    }
}



